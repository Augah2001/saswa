// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  imagePath   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum ResourceType {
  NEWSLETTER
  POLICY_BRIEF
  BLOG
  HUMAN_RIGHTS_VIOLATIONS_REPORT
  REPORT_FOR_SEX_WORKERS
  BRIEF
  FRAMEWORK_REPORT
}

model Resource {
  id        String       @id @default(cuid())
  title     String
  content   String       @db.Text
  filePath  String?
  imagePath String?
  type      ResourceType
  createdAt DateTime     @default(now())
  updatedAt DateTime @updatedAt
}

model GalleryImage {
  id        String   @id @default(cuid())
  title     String
  imagePath String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
